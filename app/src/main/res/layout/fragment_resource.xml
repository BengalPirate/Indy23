<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="2"
    android:rowCount="2"
    android:gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.ResourceFragment">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Indications section -->
            <TextView
                android:id="@+id/health_pro_info_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:paddingTop="10dp"
                android:text="HEALTH PROFESSIONAL INFORMATION"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/bulbIV"/>

            <TextView
                android:id="@+id/indications_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:paddingTop="16dp"
                android:text="1. INDICATIONS"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/health_pro_info_tv" />

            <TextView
                android:id="@+id/pediatrics_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:paddingTop="16dp"
                android:text="1.1 Pediatrics: The safety and efficacy of MOUNJARO have not been studied in pediatric
patients. MOUNJARO is not indicated for use in pediatric patients."
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/indications_tv" />

            <TextView
                android:id="@+id/geriatrics_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:paddingTop="16dp"
                android:text="1.2 Geriatrics: : No overall differences in safety or efficacy were observed in clinical trial
patients â‰¥65 years of age compared to younger patients"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/pediatrics_tv" />

            <!-- Contraindications section -->
            <TextView
                android:id="@+id/contraindications_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:paddingTop="16dp"
                android:text="2. CONTRAINDICATIONS"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/geriatrics_tv"/>

            <TextView
                android:id="@+id/contraindicationsDetail_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:paddingTop="16dp"
                android:text="@string/contraindicationsDetail_tv"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/contraindications_tv" />
            <TextView
                android:id="@+id/warnings_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:paddingTop="16dp"
                android:text="3. SERIOUS WARNINGS AND PRECAUTIONS BOX"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/contraindicationsDetail_tv" />
            <TextView
                android:id="@+id/warningTv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:paddingTop="16dp"
                android:text="@string/warningTv"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/warnings_tv" />
            <TextView
                android:id="@+id/dosage_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:paddingTop="16dp"
                android:text="4. DOSAGE AND ADMINISTRATION"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/warningTv" />


            <!-- Dosing Considerations -->
            <TextView
                android:id="@+id/dosing_considerations"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:paddingTop="16dp"
                android:text="4.1 Dosing Considerations: An increased risk of hypoglycemia was seen with concomitant use of a sulfonylurea or basal insulin with
MOUNJARO. To reduce the risk of hypoglycemia, a reduction in the dose of insulin secretagogue or insulin
should be considered when MOUNJARO is added to either of these existing therapies."
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/dosage_tv" />

            <!-- Recommended Dose and Dosage Adjustment -->
            <TextView
                android:id="@+id/recommended_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:paddingTop="16dp"
                android:text="4.2 Recommended Dose and Dosage Adjustment: The recommended starting dose of MOUNJARO is 2.5 mg injected subcutaneously once weekly. The
2.5 mg dosage is for treatment initiation and is not intended for glycemic control. After 4 weeks, increase
the dose to 5 mg once weekly."
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/dosing_considerations" />

            <!-- Administration -->
            <TextView
                android:id="@+id/administration"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:paddingTop="16dp"
                android:text="4.3 Administration"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/recommended_tv" />

            <!-- Missed Dose -->
            <TextView
                android:id="@+id/missed_dose"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:paddingTop="16dp"
                android:text="4.4 Missed Dose"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/administration" />

            <ImageView
                android:id="@+id/resourceIV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/resource_414x269"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/bulbIV"
                android:layout_width="270dp"
                android:layout_height="117dp"
                android:layout_marginTop="200dp"
                android:src="@drawable/ic_baseline_lightbulb_blue"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.496"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>